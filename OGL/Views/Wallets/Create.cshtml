@model Repository.Models.Wallet

@{
    ViewBag.Title = "Portfel";
}

<h2>Dodaj waluty do portfela</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Portfel</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Quantity, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @if (((List<string>)ViewBag.CurrencyCategories).Count() == 0)
                {
                    @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control", @readonly="readonly" } })
                }
                else
                {
                    @Html.EditorFor(model => model.Quantity, new { htmlAttributes = new { @class = "form-control" } })
                }
                @Html.ValidationMessageFor(model => model.Quantity, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Currency, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @if (((List<string>)ViewBag.CurrencyCategories).Count() == 0)
                {
                    @Html.DropDownList("Currency", new SelectList(ViewBag.CurrencyCategories, "Currency"), new { htmlAttributes = new { @class = "form-control", @disabled = "disabled", @readonly="readonly" } })
                }
                else
                {
                    @Html.DropDownList("Currency", new SelectList(ViewBag.CurrencyCategories, "Currency"), new { htmlAttributes = new { @class = "form-control" } })
                }
                @Html.ValidationMessageFor(model => model.Currency, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @if (((List<string>)ViewBag.CurrencyCategories).Count() == 0 )
                {
                    <input type="submit" value="Create" class="btn btn-default" disabled="disabled"/>
                }
                else
                {
                    <input type="submit" value="Create" class="btn btn-success" />
                }
            </div>
        </div>
    </div>
}

<div>
    <a href="@Url.Action("Index", "Wallets")" class="btn btn-warning">Wroc</a>
</div>
